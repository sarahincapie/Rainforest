<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<h3> Reviews </h3>

<% @products.review.each do |review| %>

<p>
	<% review.comment %>

</p>

<div>

<% time_ago_in_words review.created_at %>

</div>

<% end %>

